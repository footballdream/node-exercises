extends layout
block content
  .container
    .panel.panel-default
      .panel-heading
        strong 句子
      .panel-body
        .btn-toolbar(role="toolbar")
          .btn-group
            button.btn.btn-default(type="button")
              i.fa.fa-refresh &nbsp刷新
              
          .btn-group
            button.btn.btn-primary(type="button")
              i.fa.fa-plus &nbsp创建
            button.btn.btn-primary(type="button")
              i.fa.fa-pencil &nbsp修改
            button.btn.btn-primary(type="button")
              i.fa.fa-minus &nbsp删除
              
      .table-responsive
        table.table.table-bordered.table-hover.table-striped
          thead
            tr 
              th(style="width: 48px") 序号
              th 英文
              th 中文
              th(colspan="2")
          tbody
            each element in sentences
               tr
                 td(style="text-align: center") 1
                 td(style="text-align: left")= element.english
                 td(style="text-align: left")= element.chinese
                 td(colspan="2") 



